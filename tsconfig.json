{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./lib/*"
      ],
      "components/*": [
        "./lib/ts/*"
      ],
      "containers/*": [
        "./lib/scss/*"
      ]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "env.d.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "test/**/*",
    "lib/**/__tests__/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
