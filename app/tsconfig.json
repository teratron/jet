{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "containers/*": [
        "./src/containers/*"
      ],
      "layouts/*": [
        "./src/layouts/*"
      ],
      "views/*": [
        "./src/views/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "&/*": [
        "../lib/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "test/**/*",
    "src/**/__tests__/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
