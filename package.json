{
  "name": "jettix",
  "version": "0.0.216",
  "description": "HTML, CSS, SCSS, JavaScript Framework",
  "private": false,
  "type": "module",
  "module": "./dist/js/jettix.js",
  "main": "./dist/js/jettix.umd.cjs",
  "style": "./dist/css/jettix.css",
  "sass": "./scss/jettix.scss",
  "files": [
    "dist/{css,js}/**/*.{css,js,map}",
    "dist/js/**/*.{esm,umd}.{js,cjs}",
    "scss/**/*.scss"
  ],
  "exports": {
    ".": {
      "import": "./dist/js/jettix.js",
      "require": "./dist/js/jettix.umd.cjs"
    }
  },
  "keywords": [
    "web",
    "framework",
    "front-end",
    "html",
    "css",
    "sass",
    "js",
    "javascript"
  ],
  "author": "Oleg Alexandrov <alexandrovoleg.ru@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teratron/jettix.git"
  },
  "bugs": {
    "url": "https://github.com/teratron/jettix/issues"
  },
  "homepage": "https://teratron.github.io/jettix",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write lib/",
    "deploy:npm": "npm publish"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.7.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "workspaces": [
    "app"
  ]
}
