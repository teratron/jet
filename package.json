{
  "name": "jettix",
  "version": "0.0.216",
  "description": "HTML, CSS, SCSS, JavaScript Framework",
  "private": false,
  "type": "module",
  "main": "dist/js/jettix.ts",
  "style": "dist/css/jettix.css",
  "sass": "src/scss/jettix.scss",
  "files": [
    "dist/{css,js}/**/*.{css,js,ts,map}",
    "src/scss/**/*.scss"
  ],
  "keywords": [
    "web",
    "framework",
    "front-end",
    "html",
    "css",
    "scss",
    "js",
    "ts",
    "javascript",
    "typescript"
  ],
  "author": "Oleg Alexandrov <alexandrovoleg.ru@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teratron/jettix.git"
  },
  "bugs": {
    "url": "https://github.com/teratron/jettix/issues"
  },
  "homepage": "https://teratron.github.io/jettix",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit -p tsconfig.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/ app/src/",
    "deploy:npm": "npm publish"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.6.0",
    "@tsconfig/node21": "^21.0.0",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.3"
  },
  "workspaces": [
    "app"
  ]
}
